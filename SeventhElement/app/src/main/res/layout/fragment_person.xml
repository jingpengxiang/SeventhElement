<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jing.seventhelement.view.fragment.PersonFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/ll_iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d_30"
            android:background="@drawable/ic_tab_bar_home" />

        <TextView
            android:id="@+id/ll_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_iv_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d_10"
            android:text="helloworld"
            android:textColor="@color/text_white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white"
        android:paddingBottom="@dimen/d_10"
        android:paddingLeft="@dimen/d_15"
        android:paddingRight="@dimen/d_15"
        android:paddingTop="@dimen/d_10">

        <ImageView
            android:id="@+id/rl_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_tab_bar_find" />

        <TextView
            android:id="@+id/rl_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d_15"
            android:layout_toRightOf="@+id/rl_iv"
            android:text="@string/my_order"
            android:textColor="@color/text_black"
            android:textSize="@dimen/s_14" />

        <ImageView
            android:id="@+id/rl_iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/iv_right" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/d2d2d2"
        android:orientation="horizontal"
        android:padding="@dimen/d_15">

        <TextView
            android:id="@+id/tv_unconfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/d_20"
            android:layout_weight="1"
            android:background="@drawable/unlock_border"
            android:gravity="center"
            android:padding="@dimen/d_5"
            android:text="@string/unconfirm" />

        <TextView
            android:id="@+id/tv_unpay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/d_20"
            android:layout_weight="1"
            android:background="@drawable/unlock_border"
            android:gravity="center"
            android:padding="@dimen/d_5"
            android:text="@string/unpay" />

        <TextView
            android:id="@+id/tv_unevaluate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/unlock_border"
            android:gravity="center"
            android:padding="@dimen/d_5"
            android:text="@string/unevaluate" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
</LinearLayout>